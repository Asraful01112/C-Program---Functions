#include <stdio.h>

long factorial(int n) {
    if (n == 0 || n == 1) 
        return 1;
    else
        return n * factorial(n - 1);
}

int main() {
    int number;
    long result;

    printf("Enter a non-negative integer: ");
    scanf("%d", &number);

    if (number < 0) {
        printf("Factorial is not defined for negative numbers.\n");
        return 0;
    }

    result = factorial(number);

    printf("Factorial of %d is %ld\n", number, result);

    return 0;
}

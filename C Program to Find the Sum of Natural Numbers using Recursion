#include <stdio.h>

int sumNatural(int n) {
    if (n == 0)  // Base case
        return 0;
    else
        return n + sumNatural(n - 1);
}

int main() {
    int n, sum;

    printf("Enter a positive integer: ");
    scanf("%d", &n);

    if (n < 0) {
        printf("Please enter a positive number.\n");
        return 0;
    }

    sum = sumNatural(n);

    printf("Sum of first %d natural numbers is %d\n", n, sum);

    return 0;
}
